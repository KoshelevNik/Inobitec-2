<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="main.mapper.PatientMapper">
    <select id="selectAll" resultType="main.model.Patient">
        select * from "patient";
    </select>
    <insert id="insert" parameterType="main.model.Patient">
        insert into "patient" values (#{id}, #{name}, #{password}, #{mail});
    </insert>
    <delete id="delete">
        delete from "patient" where "id"=#{id};
    </delete>
    <update id="update" parameterType="main.model.Patient">
        update "patient" set
        "name"=#{name},
        "password"=#{password},
        "mail"=#{mail}
        where "id"=#{id}
    </update>
    <select id="selectById" resultType="main.model.Patient">
        select * from "patient" where "id"=#{id};
    </select>
</mapper>